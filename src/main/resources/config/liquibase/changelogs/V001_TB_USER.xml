<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="lukecorf" id="001">
        <createTable tableName="USER" remarks="Save User info.">
            <column autoIncrement="true" name="ID" type="NUMBER" remarks="Primary key of User table. Unique and generated by SEQ_USER">
                <constraints primaryKey="true"/>
            </column>
            <column name="NAME" type="VARCHAR(255)" remarks="Course name.">
                <constraints nullable="false"/>
            </column>
            <column name="EMAIL" type="VARCHAR(155)" remarks="User e-mail.">
                <constraints nullable="false"/>
            </column>
            <column name="NICKNAME" type="VARCHAR(50)" remarks="User nickname.">
                <constraints nullable="false"/>
            </column>
            <column name="PASSWORD" type="VARCHAR(20)" remarks="User password.">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createSequence incrementBy="1" sequenceName="SEQ_USER" startValue="1"/>

        <rollback>
            <dropTable tableName="USER"/>
            <dropSequence sequenceName="SEQ_USER"/>
        </rollback>
    </changeSet>


</databaseChangeLog>
